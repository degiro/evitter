{
  "compilerOptions": {
    "target": "es5",
    "outDir": "lib",
    "rootDir": "src",
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "lib": [
      "esnext"
    ]
  },
  "exclude": [
    "node_modules",
    "coverage",
    "__tests__",
    "*.js"
  ]
}