{
  "compilerOptions": {
    "target": "es2016",
    "outDir": "lib",
    "rootDir": "src",
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "coverage",
    "__tests__",
    "*.js"
  ]
}